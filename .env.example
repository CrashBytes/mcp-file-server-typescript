# Server Configuration
MCP_SERVER_NAME=file-operations-server
MCP_SERVER_VERSION=1.0.0

# Filesystem Configuration
# Comma-separated list of allowed directories (empty = all paths allowed)
MCP_ALLOWED_PATHS=/Users/yourname/Documents,/Users/yourname/Projects

# Maximum file size in bytes (default: 10MB)
MCP_MAX_FILE_SIZE=10485760

# Comma-separated list of blocked file extensions
MCP_BLOCKED_EXTENSIONS=.exe,.dll,.so,.dylib

# Logging Configuration
# Options: DEBUG, INFO, WARN, ERROR
MCP_LOG_LEVEL=INFO

# Pretty print logs (not recommended for production)
MCP_LOG_PRETTY=false
