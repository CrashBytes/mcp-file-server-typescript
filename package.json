{
  "name": "@crashbytes/mcp-file-server-typescript",
  "version": "1.0.0",
  "description": "Production-grade MCP server providing file system operations for Claude Desktop and compatible LLM clients",
  "main": "dist/server.js",
  "bin": {
    "mcp-file-server": "./dist/server.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-esm src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai-tools",
    "llm",
    "typescript"
  ],
  "author": "CrashBytes",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.6",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
